@using Web.Models
@using PagedList.Mvc;
@model PagedList.IPagedList<NhanVien>
@{ ViewBag.Title = "Staff";
   Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; 
}
<style>
    .pagination a {
        color: black;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color .3s;
    }
    .pagination a.active {
        background-color: dodgerblue;
        color: white;
    }
    .pagination a:hover:not(.active) {
        background-color: #ddd;
    }
</style>

<main>
    <h2>Nhân Viên</h2>
    <section class="recent">
        <div class="activity-grid">
            <div class="activity-card">
                <div class="right">
                    <a href="@Url.Action("Createstaff","Staff")"><button><i class="fas fa-plus-circle"></i> Tạo Nhân Viên</button></a>
                </div>
                <table>
                    <thread>
                        <tr>
                            <th>Mã nhân viên</th>
                            <th>Tên nhân viên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Username</th>
                            <th>Chức năng</th>
                        </tr>
                    </thread>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <a href="">
                                    <td class="content">@item.NHANVIEN_ID</td>
                                    <td>@item.TENNV</td>
                                    <td class="content">@item.EMAIL</td>
                                    <td class="content">@item.SDT</td>
                                    <td class="content">@item.ADUSERNAME</td>
                                    <td class="content">
                                        <a href="@Url.Action("EditStaff", "Staff",new {id=item.NHANVIEN_ID} )"><i class="fas fa-edit"></i></a>
                                        <a href="@Url.Action("Delete", "Staff",new {id=item.NHANVIEN_ID} )"><i class="fas fa-trash-alt"></i></a>
                                    </td>
                                </a>
                            </tr>}
                    </tbody>
                </table>
                <div class="pagination" style="cursor:pointer;">
                    Trang @(Model.PageCount < Model.PageNumber ? 0:Model.PageNumber)/@Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Staff", "Admin", new { page = page, @class = "pagenum" }))
                </div>
            </div>
            <div class="summary">
                <div class="summary-card">
                    <div class="summary-single">
                        <span class="ti-id-badge" style="margin-left:8px;"><i class="fas fa-id-badge fa-2x"></i></span>
                        <div>
                            <h5> @ViewBag.Tongnhanvien</h5>
                            <small> Nhân Viên</small>
                        </div>
                    </div>
                    <div class="summary-single">
                        <span class="ti-id-badge"><i class="fas fa-smile fa-2x"></i></span>
                        <div>
                            <h5>@ViewBag.Songuoitruycap</h5>
                            <small>Số người truy cập</small>
                        </div>
                    </div>
                    <div class="summary-single">
                        <span class="ti-id-badge" style="margin-left:5px;"><i class="fas fa-user fa-2x"></i></span>
                        <div>
                            <h5>@ViewBag.Songuoidangonl</h5>
                            <small>Số người đang online</small>
                        </div>
                    </div>
                    <div class="summary-single">
                        <span class="ti-id-badge"><i class="fab fa-product-hunt fa-2x"></i></span>
                        <div>
                            <h5>@ViewBag.Tongkhachhang</h5>
                            <small>Khách hàng</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


