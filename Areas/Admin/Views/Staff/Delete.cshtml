@model Web.Models.NhanVien
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    input {
        margin-bottom: 20px;
    }
</style>
<main>
    &lsaquo; <a href="@Url.Action("Staff","Admin")" class="dash-title underline">Quay về danh sách nhân viên</a>
    <h2 class="dash-title">Xóa Nhân Viên</h2>
    <section class="recent">
        <div class="activity-grid">
            <div class="activity-card">
                <h3>Thông Tin Nhân Viên</h3>
                <div class="detail">
                    @using (Html.BeginForm("Delete", "Staff", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m=>m.NHANVIEN_ID)
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="left">
                            Tên Sản Phẩm <br>
                            @Html.TextBoxFor(model => model.TENNV, new { htmlAttributes = new { @class = "form-control" } })
                            <br>
                            Số điện thoại <br>
                            @Html.TextBoxFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                            <br>
                            Ngày Sinh<br>
                            @Html.TextBoxFor(model => model.NGAYSINH, new { @class = "" })
                        </div>
                        <div class="right">
                            <br>
                            Email <br>
                            @Html.TextBoxFor(model => model.EMAIL, new { @class = "" })
                            <br>
                            Username <br />
                            @Html.TextBoxFor(model => model.ADUSERNAME, new { @class = "" })
                            <br>
                            Password<br>
                            @Html.TextBoxFor(model => model.ADPASSWORD, new { @class = "" })
                            <br>
                        </div>
                        <div class="btn">
                            <input type="submit" value="DELETE">
                        </div>}
                </div>
            </div>
            <div class="summary">
                <div class="summary-card">
                    <div class="summary-single">
                        <span class="ti-id-badge"><i class="fas fa-id-badge fa-2x"></i></span>
                        <div>
                            <h5>196</h5>
                            <small>Nhân Viên</small>
                        </div>
                    </div>
                    <div class="summary-single">
                        <span class="ti-id-badge"><i class="fas fa-smile fa-2x"></i></span>
                        <div>
                            <h5>200</h5>
                            <small>Sản Phẩm Bán Chạy</small>
                        </div>
                    </div>
                    <div class="summary-single">
                        <span class="ti-id-badge"><i class="fab fa-product-hunt fa-2x"></i></span>
                        <div>
                            <h5>125</h5>
                            <small>Sản Phẩm Mới</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

