@model Web.Models.NhanVien
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("/Areas/Admin/Content/css/style.css")
    @Styles.Render("https://fonts.googleapis.com/css?family=Poppins:600&display=swap")
    @Scripts.Render("https://kit.fontawesome.com/a81368914c.js")
    <link rel="icon" href="~/Content/img/logos/logotitlewhite.png" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
 
</head>
<body>
    <img class="wave" src="~/Areas/Admin/Content/img/wave.png">
    <div class="container">
        <div class="img">
            <img src="~/Areas/Admin/Content/img/bg.svg">
        </div>
        <div class="login-content">
            @using (Html.BeginForm("Login", "LoginAdmin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "sign-in-form" }))
            {
                <img src="~/Areas/Admin/Content/img/avatar.svg">
                <h2 class="title">Welcome</h2>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Username</h5>
                        @Html.TextBoxFor(model=>model.ADUSERNAME,new {@class = "input" })
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        @Html.PasswordFor(model => model.ADPASSWORD, new { @class = "input" })
                    </div>
                </div>
                <a href=""data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="mdo">Forgot Password?</a>
                <input type="submit" class="btn" value="Login">
            }
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Đổi mật khẩu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                @using (Html.BeginForm("Forgot", "ForgotPass", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" });
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Email:</label>
                            @Html.TextBoxFor(m=>m.EMAIL,new {@class = "form-control" })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Xác Nhận</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Areas/Admin/Content/js/main.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
