@model Web.Models.KhachHang
@{ Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login LEO</title>
    @Styles.Render("/Content/css/login.css")
    <script src="https://kit.fontawesome.com/64d58efce2.js"></script>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                @using (Html.BeginForm("Login", "Login",
                   new { ReturnUrl = ViewBag.ReturnUrl },
                   FormMethod.Post, new { @class = "sign-in-form" }))
                {
                    @Html.AntiForgeryToken()
                    <a href="@Url.Action("Index","Home")">
                        <img class="logo" src="~/Content/img/img_Login/logo.png" alt="">
                    </a>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        @Html.TextBoxFor(model => model.USERNAME, "", new { placeholder = "Username" })
                        <p style="color:red;width:300px;">@Html.ValidationMessageFor(model => model.USERNAME, "", new{ @class= "text-danger" })</p>   
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        @Html.PasswordFor(model => model.UPASSWORD, new { placeholder = "Password" })
                        <p style="color:red;width:300px;">@Html.ValidationMessageFor(model => model.UPASSWORD, "", new { placeholder = "Username" })</p>
                    </div>
                    <input type="submit" value="Login" class="btn solid"/>
                    <p class="social-text">Or Sign in with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                 }
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Create Account</h3>
                    <p>
                        Website LEO SHOP
                        Tạo tài khoản nếu chưa có để vào mua sắm
                    </p>
                    <a href="@Url.Action("Resigter","Login")" style="text-decoration: none">
                        <button class="btn transparent" id="sign-up-btn">
                            Sign up
                        </button>
                    </a>
                </div>
                <img src="~/Content/img/img_Login/log.svg" class="image" alt="" />
            </div>
        </div>
    </div>
</body>
</html>
