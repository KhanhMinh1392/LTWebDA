@model Web.Models.MailModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

<div id="inner_banner" class="section inner_banner_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h1 class="page-title">Contact</h1>
                            <ol class="breadcrumb">
                                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                                <li class="active">Contact</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end inner page banner -->
<div class="section padding_layout_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-xs-12"></div>
            <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="full">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 adress_cont margin_bottom_30">
                            <h4>Dia Chi 1</h4>
                            <div class="information_bottom left-side margin_bottom_20_all">
                                <div class="icon_bottom"> <i class="fa fa-road" aria-hidden="true"></i> </div>
                                <div class="info_cont">
                                    <h4 style="font-family:Tahoma">475A Điện Biên Phủ, Phường 25, Q.Bình Thạnh, TP.HCM</h4>
                                    <p>Việt Nam</p>
                                </div>
                            </div>
                            <div class="information_bottom left-side margin_bottom_20_all">
                                <div class="icon_bottom"> <i class="fa fa-user" aria-hidden="true"></i> </div>
                                <div class="info_cont">
                                    <h4>123 456 789 1</h4>
                                    <p>Mon-Fri 8:30am-6:30pm</p>
                                </div>
                            </div>
                            <div class="information_bottom left-side">
                                <div class="icon_bottom"> <i class="fa fa-envelope" aria-hidden="true"></i> </div>
                                <div class="info_cont">
                                    <h4>leoshop993@gmail.com</h4>
                                    <p>24/7 online support</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 adress_cont margin_bottom_30_all">
                            <h4>Dia Chi 2</h4>
                            <div class="information_bottom left-side margin_bottom_20_all">
                                <div class="icon_bottom"> <i class="fa fa-road" aria-hidden="true"></i> </div>
                                <div class="info_cont">
                                    <h4 style="font-family:Tahoma">Lô E1, Phân khu đào tạo E1, Khu Công Nghệ cao TP.HCM, Phường Hiệp Phú, Quận 9, TP.HCM.</h4>
                                    <p>Việt Nam</p>
                                </div>
                            </div>
                            <div class="information_bottom left-side margin_bottom_20_all">
                                <div class="icon_bottom"> <i class="fa fa-user" aria-hidden="true"></i> </div>
                                <div class="info_cont">
                                    <h4>0011 234 56789</h4>
                                    <p>Mon-Fri 8:30am-6:30pm</p>
                                </div>
                            </div>
                            <div class="information_bottom left-side">
                                <div class="icon_bottom"> <i class="fa fa-envelope" aria-hidden="true"></i> </div>
                                <div class="info_cont">
                                    <h4>leoshop993@gmail.com</h4>
                                    <p>24/7 online support</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 contant_form">
                            <h4 style="font-family:Tahoma">Liên Lạc</h4>
                            <p style="font-family:Tahoma">Mục tiêu của chúng tôi là cung cấp dịch vụ khách hàng tốt nhất và trả lời tất cả các câu hỏi của bạn một cách kịp thời.</p>
                            <div class="form_section">
                                @using (Html.BeginForm("Contact", "SendMail",FormMethod.Post,new { @class = "form_contant", enctype = "multipart/form-data" }))
                                {
                                    <fieldset>
                                        <div class="row">
                                            <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                @Html.TextBoxFor(model=>model.to,new { @class = "field_custom", placeholder = "leoshop993@gmail.com",@readonly="true" })
                                            </div>
                                            <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                @Html.TextBoxFor(model => model.subject,new { @class = "field_custom", placeholder = "Tên bạn" })
                                            </div>
                                            <div class="field col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                @Html.TextAreaFor(model => model.body,new { @class = "field_custom", placeholder = "Email bạn và tin nhắn" })
                                            </div>
                                            <div class="center">
                                                <input type="submit" class="btn main_bt" value="GỬI MAIL" data-bs-toggle="modal" data-bs-target="#staticBackdrop"/>
                                            </div>
                                        </div>
                                    </fieldset>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel" style="text-align:center">Thông Báo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-dialog modal-dialog-centered">
          <img src="~/Content/img/logos/logo-gmail.png" alt="" style="width:100px" />
          <h3>Gửi Mail Thành Công</h3>
      </div>
      <div class="modal-footer">
          <a href="@Url.Action("Index","Home")">
              <button type="button" class="btn btn-primary center">Oke</button>
          </a>
      </div>
    </div>
  </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
